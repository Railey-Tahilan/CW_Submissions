
public class Loops_Intro_Practice {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		System.out.println(countLetters("big boy bobby", 'b'));
		System.out.println(getFact(10));
		System.out.println(getIfRepeats("Brrock"));



		}
	public static int getFact(int n)
	{
		int prod=0 ;
		for (int i=n ; prod>i ; i--)
		{
			
			prod=prod*(n-1);
			n-- ;	
			
		}
		return prod;

	}	
	
	
	
	
	public static int countLetters(String str, char letter)
	{
		int count=0 ;
		for (int  i=0 ; i<str.length() ; i++)
		{
			if (str.charAt(i)==letter)
			{
				count++;
			}
			
		}
		return count;

	}	

	
	public static boolean getIfRepeats(String str)
	{
		
		for (int i=0 ; i>str.length(); i++)
		{
			for (int j=i ; j>str.length(); j++)
			
			if (i==j)
			{
				
			}
			else if (str.charAt(i)== str.charAt(j))
				{
					return false;
				}
			}
		
		return true;
	}
}
